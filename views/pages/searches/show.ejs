<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/head.ejs') %>
<body>
    <%- include('../../layout/header.ejs') %>
    <main>
        <h3>search results</h3>
        <section>
            <% books.forEach(book => { %>
                <li>
                    <%- include('../books/detail.ejs', {book: book}) %>
                    <button class="show-form">Modify / Add to Bookshelf</button> 
                    <form class="hide-form" action="/books" method="POST">
                        <input type="text" value="<%= book.title %>" name="title">
                        <input type="text" value="<%= book.author %>" name="author">
                        <input type="text" value="<%= book.isbn %>" name="isbn">
                        <input type="text" value="<%= book.image_url %>" name="image_url">
                        <input type="text" value="<%= book.descript %>" name="descript">
                        <input type="text" placeholder="Bookshelf Category" name="bookshelf" required>
                        <input id="add-butt" type="submit" value="Add to Bookshelf">
                    </form>
                </li>
            <% }); %>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="/js/app.js"></script>
</body>
</html>
