<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/head.ejs') %>
<body>
    <%- include('../../layout/header.ejs') %>
    <main>
        <h3>detail view</h3>
        <section>
            <figure>
                <%- include('./detail.ejs', {book: book}) %>
                <form action="/books/<%= book.id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="delete me">
                </form>
                <button class="show-form">Modify Details</button> 
                <form class="hide-form" action="/books/<%= book.id %>" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <input type="text" value="<%= book.title %>" name="title">
                    <input type="text" value="<%= book.author %>" name="author">
                    <input type="text" value="<%= book.isbn %>" name="isbn">
                    <input type="text" value="<%= book.image_url %>" name="image_url">
                    <input type="text" value="<%= book.descript %>" name="descript">
                    <input type="text" placeholder="Bookshelf Category" name="bookshelf" required>
                    <input id="add-butt" type="submit" value="Save Changes">
                </form>
            </figure>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="/js/app.js"></script>
</body>
</html>
